# ============================================
# Nexus Development Configuration
# Copy to .env and customize for your setup
# ============================================

# --- Server ---
NEXUS__SERVER__HOST=0.0.0.0
NEXUS__SERVER__PORT=8080
NEXUS__SERVER__GATEWAY_PORT=8081
NEXUS__SERVER__VOICE_PORT=8082

# --- PostgreSQL ---
NEXUS__DATABASE__URL=postgres://nexus:nexus_dev_password@localhost:5432/nexus
NEXUS__DATABASE__MAX_CONNECTIONS=20
NEXUS__DATABASE__MIN_CONNECTIONS=5

# --- Redis ---
NEXUS__REDIS__URL=redis://localhost:6379

# --- ScyllaDB ---
NEXUS__SCYLLA__NODES=["127.0.0.1:9042"]
NEXUS__SCYLLA__KEYSPACE=nexus

# --- Auth ---
# IMPORTANT: Change this in production! Generate with: openssl rand -hex 64
NEXUS__AUTH__JWT_SECRET=CHANGE_ME_IN_PRODUCTION_use_openssl_rand_hex_64
NEXUS__AUTH__ACCESS_TOKEN_TTL_SECS=900
NEXUS__AUTH__REFRESH_TOKEN_TTL_SECS=2592000

# --- S3/MinIO Storage ---
NEXUS__STORAGE__ENDPOINT=http://localhost:9000
NEXUS__STORAGE__BUCKET=nexus-uploads
NEXUS__STORAGE__ACCESS_KEY=nexus
NEXUS__STORAGE__SECRET_KEY=nexus_dev_password
NEXUS__STORAGE__REGION=us-east-1

# --- MeiliSearch ---
NEXUS__SEARCH__URL=http://localhost:7700
NEXUS__SEARCH__API_KEY=nexus_dev_search_key

# --- Limits ---
NEXUS__LIMITS__MAX_SERVERS_PER_USER=200
NEXUS__LIMITS__MAX_CHANNELS_PER_SERVER=500
NEXUS__LIMITS__MAX_ROLES_PER_SERVER=250
NEXUS__LIMITS__MAX_MEMBERS_PER_SERVER=500000
NEXUS__LIMITS__MAX_MESSAGE_LENGTH=4000
NEXUS__LIMITS__MAX_FILE_SIZE_BYTES=104857600
NEXUS__LIMITS__MAX_ATTACHMENT_COUNT=10

# --- Logging ---
RUST_LOG=nexus=debug,tower_http=debug
